<% layout('layouts/boilerplate.ejs') %>

    <div class="row">
        <div class="col-4 offset-3">
            
            <h3>User Login</h3>
            <form action="/login" method="post"  autocomplete="off">
                <div>
                    <label for="username" class="form-label" >Username</label>
                    <input type="text" 
                    placeholder="" 
                    id="username"
                    name="username" 
                    class="form-control" 
                    required>
                </div>
                <div>
                    <label for="password" class="form-label" >Password</label>
                    <input type="password"
                     placeholder=""
                      name="password" 
                      class="form-control"  
                      id="password" 
                      required>

                </div>
                <button class="btn btn-success mt-3 mb-3">Login</button>
            </form>
        </div>
    </div>
   